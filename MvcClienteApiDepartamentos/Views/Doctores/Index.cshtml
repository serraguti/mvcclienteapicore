@model List<Doctor>

@{
    ViewData["Title"] = "ListDepartamentos";
}

<h1 style="color:red">Api CRUD Servidor Doctores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Hospital</th>
            <th>Salario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.IdDoctor</td>
            <td>@item.Apellido</td>
            <td>@item.Especialidad</td>
            <td>@item.Hospital</td>
            <td>@item.Salario</td>
            <td>
                <a asp-action="Edit" class="btn btn-info"
                   asp-route-id="@item.IdDoctor">
                    Edit
                </a>
                <a asp-action="Details" class="btn btn-success"
                   asp-route-id="@item.IdDoctor">
                    Details
                </a>
                <a asp-action="Delete" class="btn btn-danger"
                   asp-route-id="@item.IdDoctor">
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
