@model IEnumerable<Departamento>

@{
    ViewData["Title"] = "ListDepartamentos";
}

<h1>Api CRUD Servidor</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Localidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.IdDepartamento</td>
            <td>@item.Nombre</td>
            <td>@item.Localidad</td>
            <td>
                <a asp-action="Edit" class="btn btn-info"
                   asp-route-id="@item.IdDepartamento">
                    Edit
                </a>
                <a asp-action="Details" class="btn btn-success"
                   asp-route-id="@item.IdDepartamento">
                    Details
                </a>
                <a asp-action="Delete" class="btn btn-danger"
                   asp-route-id="@item.IdDepartamento">
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
